/*Using bike rental data from Citibike NYC*/
/*Find the most frequently traveled routes.*/
SELECT
  usertype,
  CONCAT(start_station_name," to ",end_station_name) AS route,
  COUNT(*) AS num_trips,
  ROUND(AVG(tripduration/60),2) AS duration_minutes
FROM
  `bigquery-public-data.new_york.citibike_trips`
GROUP BY 
  route, usertype
ORDER BY
  num_trips DESC
LIMIT 10
;


/*Compare each stationâ€™s available bikes to the average number of rentals per station.*/
SELECT
  station_id,
  num_bikes_available,
  (SELECT
    AVG(num_bikes_available) AS avg_num_bikes_available
  FROM
    bigquery-public-data.new_york.citibike_stations) AS avg_num_bikes_available
FROM
  bigquery-public-data.new_york.citibike_stations
;

/*Find the number of rides that have started at each station.*/
SELECT
  station_id,
  name,
  number_of_rides AS number_of_rides_starting_at_station
FROM
  (
    SELECT
      CAST(start_station_id AS STRING) AS start_station_id,
      COUNT(*) number_of_rides
    FROM
      bigquery-public-data.new_york.citibike_trips
    GROUP BY
      start_station_id
  )
    INNER JOIN
    bigquery-public-data.new_york.citibike_stations ON station_id = start_station_id
    ORDER BY
      number_of_rides DESC
;
/*Casting was necessary because the start_station_id on the citibike_trips table is coded as INTEGER while the start_station_id on the citibike_stations table is coded as STRING.*/



/*Create a list of the stations that subscribers use, and organize it by station number.*/
SELECT
  station_id,
  name
FROM
  bigquery-public-data.new_york.citibike_stations
WHERE
  station_id IN
  (
    SELECT
      CAST(start_station_id AS STRING) AS start_station_id
    FROM
      bigquery-public-data.new_york.citibike_trips
    WHERE
      usertype = 'Subscriber'
  )
ORDER BY
  CAST(station_id AS FLOAT64)
;
/*Casting was necessary because the start_station_id on the citibike_trips table is coded as INTEGER while the start_station_id on the citibike_stations table is coded as STRING.*/


/*How many rides did customers take on these bikes per year*/
SELECT 
  EXTRACT(YEAR FROM starttime) AS year,
  COUNT(tripduration) AS number_of_rides
FROM
  bigquery-public-data.new_york_citibike.citibike_trips
WHERE
  tripduration IS NOT NULL
GROUP BY
  year
ORDER BY
  year DESC
;
